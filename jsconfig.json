{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "allowJs": true,
    "checkJs": false,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
